@model ScoutGestWeb.Models.CaixaViewModel

@{
    ViewData["Title"] = "Eliminar caixa - Tesouraria";
}

<h1>Eliminar caixa</h1>

<h3>Tem a certeza ?</h3>
<div>
    <h4>CaixaViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID de caixa:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grupo):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grupo)
        </dd>
        <dt class = "col-sm-2">
            Responsável:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Responsavel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Saldo):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Saldo)
        </dd>
    </dl>
    <form asp-action="EliminarPost" method="post" asp-route-id="@Model.ID">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à listagem</a>
    </form>
</div>
