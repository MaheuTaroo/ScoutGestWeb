@model IEnumerable<ScoutGestWeb.Models.CaixaViewModel>

@{
    ViewData["Title"] = "Caixas de pagamentos";
}

<h1>Caixas</h1>
<!--Informações sobre as caixas para os pagamentos -->


<p>
    <a asp-action="NovaCaixa">Nova caixa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.Grupo)
            </th>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.Responsavel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grupo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsavel)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
        }
    </tbody>
</table>
