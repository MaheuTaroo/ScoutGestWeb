@model IEnumerable<ScoutGestWeb.Models.TiposPagsViewModel>

@{
    ViewData["Title"] = "Informação do pagamento - Tesouraria";
}
<h1>Index</h1>

<p>
    <a asp-action="NovoPagamento">Novo Pagamento</a>
</p>
<div class="bg-danger rounded">@Html.ValidationSummary(false)</div>
<table class="table">
    <thead>
        <tr>
            <th>ID do pagamento</th>
            <th>Pagamento</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDPagamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pagamento)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Eliminar", "EliminarGet", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
