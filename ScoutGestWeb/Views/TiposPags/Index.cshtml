@model IEnumerable<ScoutGestWeb.Models.TiposPagsViewModel>

@{
    ViewData["Title"] = "Informação do pagamento - Tesouraria";
}
<div class="text-white">
    <aside style="left: 0; background-color: #333; overflow-x:visible; overflow-y: hidden; width: 12vw; height: 100%/*calc(100% - 90px)*/; position: absolute;">
        <br />
        @if (User.IsInRole("Administração de Agrupamento"))
        {
            <div style="padding: 3px">
                <h4>Pagamentos</h4>
                <hr />
                <ul>
                    <li class="linksMovs">
                        <a asp-action="Index" asp-controller="Caixas">Novo pagamento</a>
                    </li>
                </ul>
                <hr />
            </div>
        }
    </aside>
</div>
<div class="mainBody">
    <h1>Pagamentos</h1>
    <div class="bg-danger rounded">@Html.ValidationSummary(false)</div>
    <table class="table">
        <thead>
            <tr>
                <th>ID do pagamento</th>
                <th>Pagamento</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDPagamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pagamento)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IDPagamento }) |
                        @Html.ActionLink("Eliminar", "EliminarGet", new { id = item.IDPagamento })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>