@model IEnumerable<ScoutGestWeb.Models.TiposPagsViewModel>

@{
    ViewData["Title"] = "Informação do pagamento - Tesouraria";
}
<h1>Index</h1>

<p>
    <a asp-action="NovoPagamento">Novo Pagamento</a>
</p>
<div class="bg-danger rounded">@Html.ValidationSummary(false)</div>
<table class="table">
    <thead>
        <tr>
            <th>ID do pagamento</th>
            <th>Pagamento</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <div>
            <div class="modal fade" id="eliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            ...
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDPagamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pagamento)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Eliminar", "Delete", new { /* id=item.PrimaryKey */ })
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#eliminar">Eliminar</button>
            </td>
        </tr>
}
    </tbody>
</table>
