@{
    Layout = null;
}

<html translate="no">
    <head>
        <meta name="viewport" content="width=device-width" initial-scale="1" charset="windows-1252" />
        <title>@ViewData["Title"] - ScoutGest</title>
        <link rel="icon" href="~/imgs/favicon.ico" />
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <link href="~/css/site.css" rel="stylesheet" />
        <script src="~/js/site.js"></script>
    </head>
    <body class="bg-white text-dark" style="background-color: rgba(0, 0, 0, 0.05);">
        @if (ViewData["Title"] == null)
        {
            <div class="bg-white">
                @RenderBody()
            </div>
        }
        else
        {
            <div class="container-fluid bg-dark text-white pt-1 pb-1 pr-1 pl-1">
                <div class="container-fluid bg-light text-center border-primary header p-1">
                    <h1 style="color:rgb(82, 82, 82)"><img src="~/imgs/logo.png" style="width: calc(100% / 40); margin: 3px 0px 3px 0px;">  ScoutGest</h1>
                </div>
            </div>
            if (ViewData["Title"].ToString() != "Página inicial")
            {
                <div class="container-fluid animate__animated animate__fadeIn overflow-auto" style="min-height: calc(100% - 10vh - 30px)"> 
                    @if (ViewData["Title"].ToString() == "Tesouraria")
                    {
                        @if (ViewData["Title"].ToString() == "Movimentos - Tesouraria")
                        {
                            <style>
                                body {
                                    background-image: url(../imgs/back_tesouraria.png);
                                    background-size: calc(cover - 10vh - 30px);
                                    margin-left: 30%;
                                }
                            </style>
                        }
                        else
                        {
                            <style>
                                body {
                                    background-image: url(../imgs/back_tesouraria.png);
                                    background-size: calc(cover - 10vh - 30px);
                                }
                            </style>
                        }

                    }
                    else if (ViewData["Title"].ToString().Contains("Tesouraria"))
                    {
                        <style>
                            body {
                                background-image: url(../imgs/back_tesouraria.png);
                                background-size: calc(auto - 10vh - 30px);
                            }
                        </style>
                    }
                    else if (ViewData["Title"].ToString() == "Atividades")
                    {
                        <style>
                            body {
                                background-image: url(../imgs/back_atividades.png);
                                background-size: calc(auto - 10vh - 30px);
                            }
                        </style>
                    }
                    else if (ViewData["Title"].ToString().Contains("Atividades"))
                    {
                        <style>
                            body {
                                background-image: url(../../wwwroot/imgs/back_atividades.png);
                                background-size: calc(auto - 10vh - 30px);
                            }
                        </style>
                    }
                    else if (ViewData["Title"].ToString() == "Escuteiros")
                    {
                        <style>
                            body {
                                background-image: url(../imgs/back_escuteiros.png);
                                background-size: cover calc(auto - 10vh - 30px);
                            }
                        </style>
                    }
                    else if (ViewData["Title"].ToString().Contains("Escuteiros"))
                    {
                        <style>
                            body {
                                background-image: url(../../wwwroot/imgs/back_escuteiros.png);
                                background-size: calc(auto - 10vh - 30px);
                            }
                        </style>
                    }
                    else if (ViewData["Title"].ToString() == "Informações e logout")
                    {
                        <style>
                            body {
                                background-image: url(../imgs/back_info_logout.png);
                                background-size: calc(auto - 10vh - 30px);
                            }
                        </style>
                    }
                    @RenderBody()
                </div>
            }
            else
            {
                <div class="container-fluid animate__animated animate__fadeIn footer" id="body-dash">
                    @RenderBody()
                </div>
            }
        }
        <footer class="bg-dark text-white text-center" style="position: sticky">
            ASP.NET CORE &copy; @DateTime.Now.Year, Criado por João Martins e João Jesus
        </footer>
    </body>
</html>