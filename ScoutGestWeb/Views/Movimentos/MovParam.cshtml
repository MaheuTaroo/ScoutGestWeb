
@{
    ViewData["Title"] = "Movimentos entre parâmetros - Tesouraria";
}

<h1>Movimentos entre parâmetros</h1>

@using (Html.BeginForm("MovParam", "Movimentos", FormMethod.Post))
{
    <div>
        <h3>Data</h3><br />
        <label>Início: <input type="date" min="1900-01-01" step="1" name="dataInicio" /></label><br />
        <label>Fim: <input type="date" min="1900-01-01" step="1" name="dataFim" /></label>
    </div>
    <div>
        <h3>Caixas</h3><br />
        <label>
            Início:
            <select name="caixaInicio">
                @foreach (string s in ViewBag.caixas)
                {
                    <option>@s</option>
                }
            </select>
        </label><br />
        <label>
            Fim:
            <select name="caixaFim">
                @foreach (string s in ViewBag.caixas)
                {
                    <option>@s</option>
                }
            </select>
        </label>
    </div>
    <div>
        <h3>Tipos de pagamento</h3><br />
        <label>
            Início:
            <select name="tipoPagInicio">
                @foreach (string s in ViewBag.pags)
                {
                    <option>@s</option>
                }
            </select>
        </label><br />
        <label>
            Fim:
            <select name="tipoPagFim">
                @foreach (string s in ViewBag.pags)
                {
                    <option>@s</option>
                }
            </select>
        </label>
    </div>
    <div>
        <h3>Atividades</h3><br />
        <label>
            Início:
            <select name="ativInicio">
                @foreach (string s in ViewBag.ativs)
                {
                    <option>@s</option>
                }
            </select>
        </label><br />
        <label>
            Fim:
            <select name="ativFim">
                @foreach (string s in ViewBag.ativs)
                {
                    <option>@s</option>
                }
            </select>
        </label>
    </div>
    <div>
        <h3>Secções</h3><br />
        <label>
            Início:
            <select name="seccaoInicio">
                @foreach (string s in ViewBag.seccoes)
                {
                    <option>@s</option>
                }
            </select>
        </label><br />
        <label>
            Fim:
            <select name="seccaoFim">
                @foreach (string s in ViewBag.seccoes)
                {
                    <option>@s</option>
                }
            </select>
        </label>
    </div>
    <input type="submit" value="Gerar consulta" />
}