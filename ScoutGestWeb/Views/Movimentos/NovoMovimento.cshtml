@model ScoutGestWeb.Models.MovimentoViewModel

@{
    ViewData["Title"] = "NovoMovimento";
}

<h1>NovoMovimento</h1>

<h4>MovimentoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NovoMovimento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IDMovimento" class="control-label"></label>
                <input asp-for="IDMovimento" class="form-control" />
                <span asp-validation-for="IDMovimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDCaixa" class="control-label"></label>
                <select asp-for="IDCaixa" class="form-control">
                    @foreach (var item in ViewBag.caixas)
                    {
                        <option>@item</option>
                    }
                </select>
                <span asp-validation-for="IDCaixa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDDocumento" class="control-label"></label>
                <input asp-for="IDDocumento" class="form-control" />
                <span asp-validation-for="IDDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMovimento" class="control-label"></label>
                <select asp-for="TipoMovimento" class="form-control">
                    @if (ViewBag.entrada)
                    {
                        <option selected>Entrada</option>
                        <option>Saída</option>
                    }
                    else
                    {
                        <option>Entrada</option>
                        <option selected>Saída</option>
                    }
                </select>
                <span asp-validation-for="TipoMovimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataHora" class="control-label"></label>
                <input asp-for="DataHora" class="form-control" />
                <span asp-validation-for="DataHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPagamento" class="control-label"></label>
                <input asp-for="TipoPagamento" class="form-control" />
                <span asp-validation-for="TipoPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

