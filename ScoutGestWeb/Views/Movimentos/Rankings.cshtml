@{
    ViewData["Title"] = "Rankings - Tesouraria";
}

<h1>Rankings</h1>
<div class="split">
    <div class="split left" style="margin-top:210px;margin-left:5%; width:40%">
        @using (Html.BeginForm("RankingsAtivs", "Movimentos", FormMethod.Post))
        {
        <h2>Atividades</h2>
        <label>
            Atividade inicial: <select name="ativInicio">
                @foreach (string s in ViewBag.ativs)
                {
                <option>@s</option>
                }
            </select>
        </label>
        <br />
        <label>
            Atividade final:<select name="ativFim">
                @foreach (string s in ViewBag.ativs)
                {
                <option>@s</option>
                }
            </select>
        </label>
        <br />
        <label>
            Ordem:
            <select name="ordem">
                <option>Ascendente</option>
                <option>Descendente</option>
            </select>
        </label>
        <br />
        <input type="submit" value="Criar relatório" />
        }
        <br />
    </div>
    <div class="split right" style="margin-top:210px; width:40%; margin-right:5%">
        @using (Html.BeginForm("RankingsGrupos", "Movimentos", FormMethod.Post))
        {
        <h2>Grupos</h2>
        <label>
            Grupo inicial:
            <select name="grupoInicio">
                @foreach (string s in ViewBag.grupos)
                {
                <option>@s</option>
                }
            </select>
        </label>
        <br />
        <label>
            Grupo final:
            <select name="grupoFim">
                @foreach (string s in ViewBag.grupos)
                {
                <option>@s</option>
                }
            </select>
        </label>
        <br />
        <label>
            Ordem:
            <select name="ordem">
                <option>Ascendente</option>
                <option>Descendente</option>
            </select>
        </label>
        <br />
        <input type="submit" value="Criar relatório" />
        }
        <br />
    </div>
</div>
