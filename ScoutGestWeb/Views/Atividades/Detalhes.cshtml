@model ScoutGestWeb.Models.AtividadeViewModel

@{
    ViewData["Title"] = "Detalhes - Atividades";
}

<h1>Detalhes</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            Secção:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seccao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Local):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
        <dt class="col-sm-2">
            Duração:
        </dt>
        <dd class="col-sm-10">
            de @Html.DisplayFor(model => model.DataInicio) até @Html.DisplayFor(model => model.DataFim)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new { id = Model.IDAtividade }) |
    <a asp-action="Index">Voltar</a>
</div>
