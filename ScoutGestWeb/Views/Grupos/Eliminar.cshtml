@model ScoutGestWeb.Models.GrupoViewModel

@{
    ViewData["Title"] = "Eliminar grupo - Escuteiros";
}

<h1>Eliminar grupo</h1>

<h3>Tem a certexa que quer eliminar este grupo</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sigla):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sigla)
        </dd>
        <dt class="col-sm-2">
            Secção:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seccao)
        </dd>
        <dt class="col-sm-2">
            Participantes:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Particips)
        </dd>
        <dt class="col-sm-2">
            Fotografia:
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.FotoDown)" />
        </dd>
    </dl>
    
    <form asp-action="EliminarPost" asp-route-id="@Model.ID">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à página anterior</a>
    </form>
</div>
