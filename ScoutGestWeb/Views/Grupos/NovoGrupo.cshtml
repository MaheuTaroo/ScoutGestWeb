@model ScoutGestWeb.Models.GrupoViewModel

@{
    ViewData["Title"] = "NovoGrupo";
}

<h4>Novo grupo</h4>
<hr />
<div class="row">
    <div class="column col-xl-3 container-fluid" style="margin: 0 0 0 0; min-width: 100%; width: 100%">
        <form asp-action="NovoGrupo" style="min-width: 100%; width: 100%;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sigla" class="control-label"></label>
                <input asp-for="Sigla" class="form-control" />
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seccao" class="control-label"></label>
                <select asp-for="Seccao" class="form-control">
                    @foreach (string s in ViewBag.seccoes)
                    {
                        <option>@s</option>
                    }
                </select>
                <span asp-validation-for="Seccao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pseudonimo" class="control-label">Pseudónimo</label>
                <input asp-for="Pseudonimo" class="form-control" />
                <span asp-validation-for="Pseudonimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary container-fluid" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à listagem</a>
</div>

