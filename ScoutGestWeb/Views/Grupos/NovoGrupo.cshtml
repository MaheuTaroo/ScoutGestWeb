@model ScoutGestWeb.Models.GrupoViewModel
@{
    ViewData["Title"] = "Novo grupo - Escuteiros";
    bool inserirBool = TempData["inserirKeep"] != null ? bool.Parse(TempData["inserirKeep"].ToString()) : true;
}

<h4>Novo grupo</h4>
<hr />
<div class="row">
    <div class="column col-xl-3 container-fluid" style="text-align: center; min-width: 50%; width: 50%">
        <form asp-action="NovoGrupo" style="min-width: 100%; width: 100%;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sigla" class="control-label"></label>
                <input asp-for="Sigla" class="form-control" />
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seccao" class="control-label">Secção</label>
                <select asp-for="Seccao" class="form-control">
                    @foreach (string s in ViewBag.seccoes)
                    {
                        <option>@s</option>
                    }
                </select>
                <span asp-validation-for="Seccao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoUp" class="control-label">Fotografia</label>
                <input asp-for="FotoUp" type="file" />
                <span asp-validation-for="FotoUp" class="text-danger"></span>
            </div>
            @if (TempData["inserirKeep"] != null && !bool.Parse(TempData["inserirKeep"].ToString()))
            {
                <input type="hidden" name="idold" value="@Model.ID" />
            }
            <input type="hidden" name="inserir" value="@(TempData["inserirKeep"] != null ? inserirBool ? "True": "False" : "True")" />
            <div class="form-group">
                <input type="submit" value="Criar caixa" class="btn btn-primary container-fluid" />-
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Escuteiros">Voltar</a>
</div>