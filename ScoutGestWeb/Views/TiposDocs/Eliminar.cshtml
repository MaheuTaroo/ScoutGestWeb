@model ScoutGestWeb.Models.TiposDocsViewModel

@{
    ViewData["Title"] = "Eliminar documento - Tesouraria";
}

<h1>Eliminar tipo de documento</h1>

<h3>Tem a certeza que deseja eliminar este tipo de documento?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">ID de documento</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IDDocumento)
        </dd>
        <dt class = "col-sm-2">Descrição</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="EliminarPost" method="post" asp-route-id="@Model.IDDocumento">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à listagem</a>
    </form>
</div>
